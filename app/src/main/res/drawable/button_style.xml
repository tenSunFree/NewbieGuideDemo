<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#00000000"/>
            <stroke
                android:width="1.5dp"
                android:color="#f08b33"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="2dp"
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#00000000"/>
            <stroke
                android:width="1.5dp"
                android:color="#d75404"/>
            <corners
                android:radius="8dp"/>
            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#00000000"/>
            <stroke
                android:width="1.5dp"
                android:color="#d75404"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="2dp"
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>
</selector>